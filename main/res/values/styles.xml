<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
    </style>

    <style name="commonButton">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_curve</item>
    </style>

    <style name="commonButton_long">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">70dp</item>
        <item name="android:paddingRight">70dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_curve</item>
    </style>

    <style name="commonButton_earn_vp">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button_curve</item>
    </style>

    <style name="commonText">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="commonText_small">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="commonText_no_padding">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="commonText_output">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="commonEdit_single_line">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="commonEdit_multi_line">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:padding">5dp</item>
    </style>



    <style name="commonSpinner">
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="commonText_setting">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="commonText_test">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
